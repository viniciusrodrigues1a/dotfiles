client.unfocused        #333333 #222222 #888888 #7f65e1ff   #7f65e1ff
client.urgent           #2f343a #900000 #ffffff #7f65e1ff   #7f65e1ff
client.placeholder      #000000 #0c0c0c #ffffff #7f65e1ff   #7f65e1ff
client.background       #ffffff

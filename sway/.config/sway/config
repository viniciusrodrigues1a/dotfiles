include /etc/sway/config.d/*

set $mod Mod4

set $term kitty
set $menu wofi --show drun --conf ~/.config/wofi/config --style ~/.config/wofi/style.css
set $printscr exec grim -g "$(slurp)" - | wl-copy --type image/png
set $toggle_keyboard $HOME/.config/sway/scripts/cycle_keyboard_layout.sh

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

set $ws0 "0"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

focus_follows_mouse no
workspace_auto_back_and_forth no
floating_modifier $mod

# Keybindings
bindsym $mod+Return exec $term
bindsym $mod+m exec $menu

bindsym --release Print exec $printscr
bindsym --release $mod+Shift+S exec $printscr

bindsym $mod+space exec --no-startup-id $toggle_keyboard

bindsym $mod+q kill

# Switch to workspace
bindsym $mod+0 workspace number $ws0
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
# Move focused container to workspace
bindsym $mod+Shift+0 move container to workspace number $ws0
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# Reload the configuration file
bindsym $mod+Shift+c reload

# Changing focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# Moving window around
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# Splits and full screen
bindsym $mod+s split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
# Change container layout
bindsym $mod+w layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split
# Toggle tiling / floating mode
bindsym $mod+Shift+space floating toggle

# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $right resize grow width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Scratchpad:
#
# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+o move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+o scratchpad show

# Status Bar:
exec waybar

# Gaps and borders
gaps inner 10
for_window [class=".*"] border pixel 2

# Monitors
output DP-2 pos 0 0 mode 2560x1440
output eDP-1 pos -1920 0 mode 1920x1080

workspace 0 output DP-2
workspace 1 output eDP-1
workspace 2 output DP-2
workspace 3 output eDP-1
workspace 4 output DP-2
workspace 5 output eDP-1
workspace 6 output DP-2
workspace 7 output eDP-1
workspace 8 output DP-2
workspace 9 output eDP-1

# Touchpad
input "1267:12522:ELAN0B00:00_04F3:30EA_Touchpad" {
  tap enabled
  natural_scroll enabled
}

for_window [app_id="org.gnome.Calculator"] floating enable

# Media keys
bindsym XF86AudioRaiseVolume exec pamixer -i 5
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioMute exec pamixer -t

bindsym XF86Calculator exec gnome-calculator

bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Background
exec swaybg -i ~/Pictures/bg.jpg -m fill
